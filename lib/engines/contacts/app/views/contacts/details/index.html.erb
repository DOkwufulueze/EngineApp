<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr class="big-row">
      <th class="big-col">User Name</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr class="big-row">
        <td class="big-col"><%= detail.user.name %></td>
        <td><%= detail.name %></td>
        <td><%= detail.email %></td>
        <td><%= detail.phone %></td>
        <td><%= detail.address %></td>
        <td><%= link_to 'Show', detail %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
        <td><%= link_to 'Destroy', detail, method: :delete, data: { confirm: "Do you really want to delete #{detail.name} from your contacts list?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

